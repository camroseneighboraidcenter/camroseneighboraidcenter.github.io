---
/**
 * TeamGrid Component
 * Displays a grid of team members using the Card component.
 *
 * @prop {string} title - Section title
 * @prop {TeamMember[]} members - Array of team members to display
 * @prop {string} className - Additional CSS classes
 */
import Card from "./Card.astro";
import type { TeamMember } from "../../data/directors.ts";

interface Props {
  title?: string;
  members: TeamMember[];
  className?: string;
}

const {
  title = "Meet Our Team",
  members,
  className = "",
} = Astro.props;

const titleId = `team-grid-${Math.random().toString(36).slice(2, 9)}`;
---
<section
  class:list={["team-grid", className]}
  aria-labelledby={titleId}
>
  <div class="team-grid__container">
    <h2 id={titleId} class="team-grid__title">{title}</h2>
    <div class="team-grid__list">
    {members.map((member) => (
      <Card
        title={member.name}
        description={member.bio}
        image={member.image}
        imageAlt={member.image ? `${member.name} - ${member.role}` : undefined}
        variant="profile"
      >
        <p class="member-role">{member.role}</p>
      </Card>
    ))}
    </div>
  </div>
</section>
<style>
  .team-grid {
    margin: var(--space-8) 0;
  }

  .team-grid__container {
    max-width: var(--max-width-6xl);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    width: 100%;
  }

  .team-grid__title {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .team-grid__list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-8);
    width: 100%;
  }

  .member-role {
    font-size: var(--text-sm);
    color: var(--color-text-light);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-2);
  }

  @media (width <= 768px) {
    .team-grid__list {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-6);
    }
  }
</style>
