---
interface Props {
  mission: string;
  className?: string;
}

const { mission, className = "" } = Astro.props;
---

<section class:list={[`mission-card`,`${className}`]} aria-labelledby="mission-title">
  <div class="mission-content">
    <h2 id="mission-title" class="mission-title">Our Mission</h2>
    <div class="mission-text">
      <p class="mission-statement">{mission}</p>
    </div>
  </div>
</section>

<style>
  .mission-card {
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    padding: var(--space-8);
    margin: var(--space-8) auto;
    max-width: 1200px;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition:
      box-shadow var(--transition-normal),
      border-color var(--transition-normal);
  }

  .mission-card:hover {
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-light);
  }

  .mission-content {
    position: relative;
    z-index: 1;
  }

  .mission-title {
    color: var(--color-primary);
    font-size: var(--text-3xl);
    margin-bottom: var(--space-6);
    text-align: center;
  }

  .mission-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .mission-statement {
    font-size: var(--text-lg);
    line-height: 1.6;
    text-align: center;
    font-style: italic;
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .mission-card {
      padding: var(--space-6);
      margin: var(--space-6) var(--space-4);
    }

    .mission-title {
      font-size: var(--text-xl);
    }

    .mission-statement,
    .vision-statement {
      font-size: var(--text-base);
    }

    .vision-title {
      font-size: var(--text-lg);
    }
  }
</style>
