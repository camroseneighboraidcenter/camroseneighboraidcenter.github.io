---
/**
 * HeroCard Component
 * A large hero-style card with background image and overlay content.
 *
 * @prop {string} title - Card title (required)
 * @prop {string} description - Card description
 * @prop {ImageMetadata} image - Background image (required)
 * @prop {string} imageAlt - Image alt text
 * @prop {string} href - Link URL
 * @prop {string} linkText - Text for the link button
 */
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description?: string;
  image: ImageMetadata;
  imageAlt?: string;
  imageTitle?: string;
  href?: string;
  linkText?: string;
  className?: string;
}

const {
  title,
  description,
  image,
  imageAlt = "",
  imageTitle,
  href,
  linkText = "View Details",
  className = "",
} = Astro.props;
---

<article class:list={["hero-card", className]}>
  <div class="hero-card__background">
    <Image
      src={image}
      alt={imageAlt}
      title={imageTitle}
      width={1920}
      height={1080}
      quality={85}
      loading="lazy"
      decoding="async"
    />
    <div class="hero-card__overlay"></div>
  </div>

  <div class="hero-card__content">
    <h2 class="hero-card__title">{title}</h2>
    {description && <p class="hero-card__description">{description}</p>}
    {
      href && (
        <a href={href} class="btn btn-primary hero-card__button">
          {linkText}
          <span class="sr-only">about {title}</span>
        </a>
      )
    }
  </div>
</article>

<style>
  .hero-card {
    position: relative;
    width: 80%;
    height: min(50vh, 600px);
    margin: 0 auto;
    border-radius: var(--radius-lg);
    overflow: hidden;
    isolation: isolate;
  }

  .hero-card__background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-card__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .hero-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      var(--color-overlay-light) 0%,
      var(--color-overlay-dark) 100%
    );
  }

  .hero-card__content {
    height: 100%;
    padding: var(--space-8);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    color: var(--color-text-inverse);
  }

  .hero-card__title {
    color: var(--color-text-inverse);
    text-shadow: 0 2px 4px var(--color-shadow-text);
  }

  .hero-card__description {
    font-size: var(--text-lg);
    margin-bottom: var(--space-6);
    text-shadow: 0 1px 2px var(--color-shadow-text);
    opacity: var(--opacity-muted);
  }

  .hero-card__button {
    align-self: flex-start;
  }

  .hero-card__button:focus-visible {
    outline-color: var(--color-text-inverse);
  }

  .hero-card:hover .hero-card__background img {
    transform: scale(1.05);
  }

  /* Responsive */
  @media (width <= 768px) {
    .hero-card {
      width: 90%;
      height: min(35vh, 300px);
    }

    .hero-card__content {
      padding: var(--space-6);
    }

    .hero-card__description {
      font-size: var(--text-base);
    }
  }
</style>
