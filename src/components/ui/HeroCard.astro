---
/**
 * HeroCard Component
 * A large hero-style card with background image and overlay content.
 * Renamed from: ProgramHeroCard
 *
 * Use cases:
 * - Program showcase cards
 * - Featured content highlights
 * - Landing page hero sections
 */
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description?: string;
  image: ImageMetadata;
  imageAlt?: string;
  imageTitle?: string;
  href?: string;
  linkText?: string;
  className?: string;
}

const {
  title,
  description,
  image,
  imageAlt = "",
  imageTitle,
  href,
  linkText = "Learn More",
  className = "",
} = Astro.props;
---

<article class:list={["hero-card", className]}>
  <div class="hero-card__background">
    <Image
      src={image}
      alt={imageAlt}
      title={imageTitle}
      width={1920}
      height={1080}
      quality={90}
    />
    <div class="hero-card__overlay"></div>
  </div>

  <div class="hero-card__content">
    <h2 class="hero-card__title">{title}</h2>
    {description && <p class="hero-card__description">{description}</p>}
    {
      href && (
        <a href={href} class="hero-card__button">
          {linkText}
          <span class="sr-only">about {title}</span>
        </a>
      )
    }
  </div>
</article>

<style>
  .hero-card {
    position: relative;
    width: 80%;
    height: min(50vh, 600px);
    margin: 0 auto;
    border-radius: var(--radius-lg);
    overflow: hidden;
    isolation: isolate;
  }

  .hero-card__background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-card__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .hero-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.7) 100%
    );
  }

  .hero-card__content {
    height: 100%;
    padding: var(--space-8);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    color: white;
  }

  .hero-card__title {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-card__description {
    font-size: var(--text-lg);
    margin-bottom: var(--space-6);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    opacity: 0.9;
  }

  .hero-card__button {
    align-self: flex-start;
    padding: var(--space-3) var(--space-6);
    background-color: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: background-color var(--transition-normal);
  }

  .hero-card__button:hover {
    background-color: var(--color-primary-dark);
  }

  .hero-card__button:focus-visible {
    outline: 2px solid white;
    outline-offset: 2px;
  }

  .hero-card:hover .hero-card__background img {
    transform: scale(1.05);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-card__background img {
      transition: none;
    }

    .hero-card:hover .hero-card__background img {
      transform: none;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-card {
      width: 90%;
      height: min(35vh, 300px);
    }

    .hero-card__content {
      padding: var(--space-6);
    }

    .hero-card__title {
      font-size: var(--text-2xl);
    }

    .hero-card__description {
      font-size: var(--text-base);
    }
  }
</style>
