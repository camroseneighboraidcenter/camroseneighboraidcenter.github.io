---
interface Props {
  title?: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
    srText?: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
    srText?: string;
  };
}

const {
  title = "Making a Difference Together",
  description = "Through the support of 20 local churches, volunteers, and donors, we're building a stronger, more resilient community.",
  primaryCta = {
    text: "Volunteer With Us",
    href: "/contact#contact-form?subject=volunteer",
    srText: "Learn more about volunteering with us",
  },
  secondaryCta = {
    text: "Support Our Mission",
    href: "/donate",
    srText: "Make a donation to support our mission",
  },
} = Astro.props;
---

<section class="cta-section" aria-labelledby="cta-title">
  <div class="cta-content">
    <h2 id="cta-title" class="cta-title">{title}</h2>
    <p class="cta-description">{description}</p>
    <div class="cta-buttons">
      <a href={primaryCta.href} class="cta-button primary">
        <span>{primaryCta.text}</span>
        {primaryCta.srText && <span class="sr-only">- {primaryCta.srText}</span>}
      </a>
      <a href={secondaryCta.href} class="cta-button secondary">
        <span>{secondaryCta.text}</span>
        {secondaryCta.srText && <span class="sr-only">- {secondaryCta.srText}</span>}
      </a>
    </div>
  </div>
</section>

<style>
  .cta-section {
    width: 100%;
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .cta-description {
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: var(--space-6);
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-normal);
    min-width: 160px;
  }

  .cta-button.primary {
    background-color: var(--color-primary);
    color: white;
  }

  .cta-button.primary:hover {
    background-color: var(--color-primary-dark);
  }

  .cta-button.secondary {
    background-color: transparent;
    color: var(--color-text);
    border: 2px solid var(--color-text);
  }

  .cta-button.secondary:hover {
    background-color: var(--color-text);
    color: var(--color-background);
  }

  .cta-button:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  @media (max-width: 640px) {
    .cta-section {
      padding: var(--space-6);
      margin: var(--space-6) 0;
    }

    .cta-title {
      font-size: var(--text-xl);
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-button {
      width: 100%;
    }
  }
</style>
