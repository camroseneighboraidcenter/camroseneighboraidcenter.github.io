---
/**
 * CallToAction Component
 * A section with title, description, and two call-to-action buttons.
 *
 * @prop {string} title - Section title
 * @prop {string} description - Section description
 * @prop {object} primaryCta - Primary button config (text, href, srText)
 * @prop {object} secondaryCta - Secondary button config (text, href, srText)
 */
interface Props {
  title?: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
    srText?: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
    srText?: string;
  };
}

const {
  title = "Making a Difference Together",
  description = "Through the support of 20 local churches, volunteers, and donors, we're building a stronger, more resilient community.",
  primaryCta = {
    text: "Volunteer With Us",
    href: "/contact#contact-form?subject=volunteer",
    srText: "Learn more about volunteering with us",
  },
  secondaryCta = {
    text: "Support Our Mission",
    href: "/donate",
    srText: "Make a donation to support our mission",
  },
} = Astro.props;
---

<section class="cta-section" aria-labelledby="cta-title">
  <div class="cta-content">
    <h2 id="cta-title" class="cta-title">{title}</h2>
    <p class="cta-description">{description}</p>
    <div class="cta-buttons">
      <a href={primaryCta.href} class="btn btn-primary cta-button">
        <span>{primaryCta.text}</span>
        {primaryCta.srText && <span class="sr-only">- {primaryCta.srText}</span>}
      </a>
      <a href={secondaryCta.href} class="btn-secondary cta-button">
        <span>{secondaryCta.text}</span>
        {secondaryCta.srText && <span class="sr-only">- {secondaryCta.srText}</span>}
      </a>
    </div>
  </div>
</section>

<style>
  .cta-section {
    width: 100%;
    padding: var(--space-16) var(--container-padding);
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .cta-content {
    max-width: var(--max-width-3xl);
    margin: 0 auto;
    text-align: center;
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    min-width: 160px;
  }

  @media (width <= 640px) {
    .cta-section {
      padding: var(--space-8) var(--container-padding);
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-button {
      width: 100%;
    }
  }
</style>
