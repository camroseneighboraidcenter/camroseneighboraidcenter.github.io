---
interface Props {
  vision: string;
  className?: string;
}

const { vision, className = "" } = Astro.props;
---

<section class:list={[`vision-card`,`${className}`]} aria-labelledby="vision-title">
  <div class="vision-content">
    <h2 id="vision-title" class="vision-title">Our Vision</h2>
    <div class="vision-text">
      <p class="vision-statement">{vision}</p>
    </div>
  </div>
</section>

<style>
  .vision-card {
    background-color: var(--color-surface);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-8);
    margin: var(--space-8) auto;
    max-width: var(--max-width-7xl);
    position: relative;
    overflow: hidden;
  }

  .vision-content {
    position: relative;
    z-index: 1;
  }

  .vision-title {
    color: var(--color-primary);
    font-size: var(--text-3xl);
    margin-bottom: var(--space-6);
    text-align: center;
  }

  .vision-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .vision-statement {
    font-size: var(--text-lg);
    line-height: 1.6;
    text-align: center;
    font-style: italic;
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .vision-card {
      padding: var(--space-6);
      margin: var(--space-6) var(--space-4);
    }

    .vision-title {
      font-size: var(--text-2xl);
    }

    .vision-statement {
      font-size: var(--text-base);
    }
  }
</style>
