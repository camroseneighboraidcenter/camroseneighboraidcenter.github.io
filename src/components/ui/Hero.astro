---
/**
 * Hero Component
 * A full-width hero section with background image, title, and call-to-action.
 *
 * @prop {string} title - Hero title (required)
 * @prop {ImageMetadata} backgroundImage - Background image (required)
 * @prop {string} ctaText - Call-to-action button text
 * @prop {string} ctaLink - Call-to-action button link
 */
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  backgroundImage: ImageMetadata;
  ctaText?: string;
  ctaLink?: string;
  loading?: "eager" | "lazy";
  fetchPriority?: "high" | "auto" | "low";
}

const {
  title,
  backgroundImage,
  ctaText = "Get Involved",
  ctaLink = "/contact#contact-form",
  loading = "eager",
  fetchPriority = "high",
} = Astro.props;
---

<section class="hero" aria-labelledby="hero-title">
  <div class="hero-background">
    <Image
      src={backgroundImage}
      alt=""
      width={1920}
      height={1080}
      quality={90}
      loading={loading}
      decoding="async"
      fetchpriority={fetchPriority}
    />
    <div class="hero-overlay"></div>
  </div>

  <div class="hero-content container">
    <div class="content-wrapper">
      <h1 id="hero-title" class="hero-title">
        <span class="title-highlight">{title}</span>
      </h1>
      <div class="cta-wrapper">
        <a href={ctaLink} class="btn btn-hero hero-cta">
          {ctaText}
          <span class="sr-only">(Call to action)</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="cta-icon"
            aria-hidden="true"
          >
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: clamp(400px, 20vh, 800px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: var(--color-surface);
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transform: scale(1.1);
    animation: zoomOut 1.5s ease-out forwards;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      165deg,
      var(--color-overlay-dark) 0%,
      var(--color-overlay-medium) 100%
    );
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
  }

  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .content-wrapper {
    max-width: var(--max-width-3xl);
    margin: 0 auto;
    text-align: center;
    animation: fadeUp 1s ease-out forwards;
  }

  .hero-title {
    font-size: clamp(var(--text-4xl), 5vw, var(--text-5xl));
    line-height: var(--leading-tight);
    margin-bottom: var(--space-6);
    color: var(--color-hero);
  }

  .cta-wrapper {
    perspective: 1000px;
  }

  .hero-cta {
    padding: var(--space-4) var(--space-8);
    transform-style: preserve-3d;
    backface-visibility: hidden;
  }

  .hero-cta:hover {
    transform: translateY(-2px) rotateX(5deg);
    box-shadow: 0 20px 40px -10px var(--color-shadow-primary);
    text-decoration: none;
  }

  .hero-cta:active {
    transform: translateY(0) rotateX(0);
  }

  .cta-icon {
    transition: transform var(--transition-fast);
  }

  .hero-cta:hover .cta-icon {
    transform: translateX(4px);
  }

  @keyframes zoomOut {
    from {
      transform: scale(1.1);
    }

    to {
      transform: scale(1);
    }
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (width <= 768px) {
    .hero {
      height: clamp(300px, 20vh, 600px);
    }

    .hero-title {
      font-size: clamp(var(--text-3xl), 8vw, var(--text-4xl));
    }

    .hero-cta {
      width: 75%;
      justify-content: center;
    }
  }
</style>
