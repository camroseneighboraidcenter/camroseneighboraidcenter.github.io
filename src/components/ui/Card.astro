---
/**
 * Card Component
 * A flexible card component with multiple variants.
 *
 * @prop {string} title - Card title (required)
 * @prop {string} description - Card description
 * @prop {ImageMetadata} image - Card image
 * @prop {string} imageAlt - Image alt text
 * @prop {string} href - Link URL (makes card clickable)
 * @prop {string} linkText - Text for the link button
 * @prop {"default" | "profile" | "horizontal"} variant
 *   - default: Standard card with image, title, description
 *   - profile: Circular image, centered text (for team members)
 *   - horizontal: Side-by-side image and content
 */
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata;
  imageAlt?: string;
  imageTitle?: string;
  href?: string;
  linkText?: string;
  variant?: "default" | "profile" | "horizontal";
  className?: string;
}

const {
  title,
  description,
  image,
  imageAlt = "",
  imageTitle,
  href,
  linkText = "Learn More",
  variant = "default",
  className = "",
} = Astro.props;

const hasLink = !!href;
const hasSlot = Astro.slots.has("default");
---

<article
  class:list={[
    "card",
    `card--${variant}`,
    { "card--clickable": hasLink },
    className,
  ]}
>
  {
    image && (
      <div
        class:list={[
          "card__image-wrapper",
          { "card__image-wrapper--circle": variant === "profile" },
        ]}
      >
        <Image
          src={image}
          alt={imageAlt}
          title={imageTitle}
          class="card__image"
          width={variant === "profile" ? 200 : variant === "horizontal" ? 800 : 400}
          height={variant === "profile" ? 200 : variant === "horizontal" ? 600 : 300}
          quality={90}
        />
      </div>
    )
  }

  <div class="card__content">
    {
      hasLink ? (
        <h3 class="card__title">
          <a href={href} class="card__title-link">
            {title}
            <span class="sr-only">Learn more about {title}</span>
          </a>
        </h3>
      ) : (
        <h3 class="card__title">{title}</h3>
      )
    }

    {description && <p class="card__description">{description}</p>}

    {hasSlot && <div class="card__slot"><slot /></div>}

    {
      hasLink && (
        <a href={href} class="card__link" aria-label={`${linkText} about ${title}`}>
          {linkText}
          <span class="sr-only">about {title}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="M5 12h14" />
            <path d="m12 5 7 7-7 7" />
          </svg>
        </a>
      )
    }
  </div>
</article>

<style>
  /* Base card styles */
  .card {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    overflow: hidden;
    transition:
      transform var(--transition-normal),
      box-shadow var(--transition-normal),
      border-color var(--transition-normal);
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow-sm);
  }

  .card--clickable:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-light);
  }

  /* Image wrapper */
  .card__image-wrapper {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .card__image-wrapper--circle {
    width: 200px;
    height: 200px;
    margin: var(--space-4) auto;
    border-radius: var(--radius-full);
  }

  .card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 4/3;
    transition: transform var(--transition-normal);
  }

  .card__image-wrapper--circle .card__image {
    aspect-ratio: 1/1;
  }

  .card--clickable:hover .card__image {
    transform: scale(1.05);
  }

  /* Content area */
  .card__content {
    padding: var(--space-6);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card__title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-3);
    color: var(--color-text);
  }

  .card__title-link {
    color: inherit;
    text-decoration: none;
  }

  .card__title-link:hover {
    color: var(--color-primary);
  }

  .card__description {
    color: var(--color-text-light);
    margin-bottom: var(--space-4);
    line-height: 1.6;
  }

  .card__slot {
    margin-bottom: var(--space-4);
  }

  .card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    margin-top: auto;
  }

  .card__link:hover {
    color: var(--color-primary-dark);
  }

  /* Profile variant */
  .card--profile {
    text-align: center;
  }

  .card--profile .card__content {
    align-items: center;
  }

  .card--profile .card__title {
    margin-bottom: var(--space-1);
  }

  /* Horizontal variant */
  .card--horizontal {
    flex-direction: row;
    gap: var(--space-8);
    max-width: var(--max-width-4xl);
    margin: 0 auto;
  }

  .card--horizontal .card__image-wrapper {
    flex: 0 0 40%;
  }

  .card--horizontal .card__image {
    aspect-ratio: auto;
    height: 100%;
  }

  .card--horizontal .card__content {
    flex: 1;
    padding: var(--space-8);
  }

  .card--horizontal .card__title {
    font-size: var(--text-2xl);
  }

  .card--horizontal .card__description {
    font-size: var(--text-lg);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card,
    .card__image {
      transition: none;
    }

    .card--clickable:hover {
      transform: none;
    }

    .card--clickable:hover .card__image {
      transform: none;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card--horizontal {
      flex-direction: column;
    }

    .card--horizontal .card__image-wrapper {
      flex: 0 0 auto;
    }

    .card__image-wrapper--circle {
      width: 150px;
      height: 150px;
    }

    .card__title {
      font-size: var(--text-lg);
    }
  }
</style>
