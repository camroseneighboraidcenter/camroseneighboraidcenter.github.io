---
interface Props {
  beliefs: Array<{
    text: string;
    verse: string;
  }>;
  className?: string;
}

const { beliefs, className = "" } = Astro.props;
---

<section
  class:list={["beliefs-section", className]}
  aria-labelledby="beliefs-title"
>
  <div class="content-container">
    <h2 id="beliefs-title" class="section-title">Our Beliefs</h2>
    <ul class="beliefs-grid">
      {
        beliefs.map(({ text, verse }) => (
          <li class="belief-card">
            <button class="belief-button" type="button">
              <p class="belief-text">
                {text}
                <span class="verse">{verse}</span>
              </p>
            </button>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .beliefs-section {
    margin: var(--space-12) 0;
    max-width: var(--max-width-7xl);
    margin: 0 auto;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    background-color: var(--color-surface);
  }

  .content-container {
    max-width: var(--max-width-7xl);
    margin: 0 auto;
    padding: var(--space-8);
    width: 100%;
  }

  .section-title {
    color: var(--color-primary);
    font-size: var(--text-3xl);
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .beliefs-grid {
    display: grid;
    grid-template-columns: 1fr;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .belief-card {
    width: 70%;
    margin: 0 auto;
  }

  .belief-button {
    width: 100%;
    text-align: left;
    background: none;
    border: none;
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-6) 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .belief-card:last-child .belief-button {
    border-bottom: none;
  }

  .belief-button:hover,
  .belief-button:focus-visible {
    outline: none;
    background-color: var(--color-surface);
    transform: translateY(-2px);
  }

  .belief-text {
    font-size: var(--text-lg);
    text-align: center;
    line-height: 1.6;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .belief-text:last-child {
    margin-bottom: 0;
  }

  .verse {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-light);
    font-style: italic;
    margin-top: var(--space-2);
  }

  /* Mobile-first responsive adjustments */
  @media (max-width: 768px) {
    .beliefs-section {
      padding: var(--space-6);
    }

    .section-title {
      font-size: var(--text-2xl);
    }

    .belief-text {
      font-size: var(--text-base);
    }
  }
</style>
