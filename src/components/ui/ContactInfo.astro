---
/**
 * ContactInfo Component
 * Displays contact information including address, hours, phone, and social links.
 *
 * @prop {boolean} showSocial - Whether to show social media icons
 * @prop {string} className - Additional CSS classes
 */
import { contactInfo } from "../../data/contact";
import { formatPhoneNumber, formatAddress } from "../../utils/formatters";
import SocialIcons from "./SocialIcons.astro";

interface Props {
  showSocial?: boolean;
  className?: string;
}

const { showSocial = true, className = "" } = Astro.props;

const { hours, phone, fax, email } = contactInfo;
const address = formatAddress(contactInfo.address);
const mailingAddress = formatAddress(contactInfo.mailingAddress);
---

<div class:list={[`contact-info-section`,`${className}`]}>
  <div class="contact-group">
    <h3 class="contact-heading">Address</h3>
    <address class="contact-text">
      {
        address && (
          <section class="contact-address" id="office-address">
            <h4>Office Address:</h4>
            <p>{address.street}</p>
            <p>{address.cityProvince}</p>
            <p>{address.postalCode}</p>
          </section>
        )
      }
      {
        mailingAddress && (
          <section class="contact-address" id="mailing-address">
            <h4>Mailing Address:</h4>
            <p>{mailingAddress.street}</p>
            <p>{mailingAddress.cityProvince}</p>
            <p>{mailingAddress.postalCode}</p>
          </section>
        )
      }
    </address>
  </div>

  <div class="contact-group">
    <h3 class="contact-heading">Hours of Operation</h3>
    <p class="contact-text">
      Monday: {hours.monday}<br />
      Tuesday: {hours.tuesday}<br />
      Wednesday: {hours.wednesday}<br />
      Thursday: {hours.thursday}<br />
      Friday: {hours.friday}<br />
      Saturday: {hours.saturday}<br />
      Sunday: {hours.sunday}
    </p>
  </div>

  <div class="contact-group">
    <h3 class="contact-heading">Contact Information</h3>
    <div class="contact-text">
      {
        phone && (
          <p>
            Phone:{" "}
            <a href={`tel:${phone}`} class="contact-link">
              <span set:html={formatPhoneNumber(phone)} />
            </a>
          </p>
        )
      }
      {
        fax && (
          <p>
            Fax: <span class="contact-detail" set:html={formatPhoneNumber(fax)} />
          </p>
        )
      }
      {
        email && (
          <p>
            Email:{" "}
            <a href={`mailto:${email}`} class="contact-link">
              {email}
            </a>
          </p>
        )
      }
    </div>
  </div>

  {
    showSocial && (
      <div class="contact-group">
        <h3 class="contact-heading">Connect With Us</h3>
        <SocialIcons className="contact-social" justify="start" />
      </div>
    )
  }
</div>

<style>
  .contact-info-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    padding: var(--space-6);
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    min-width: fit-content;
  }

  .contact-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .contact-heading {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .contact-text {
    font-style: normal;
    line-height: 1.6;
    color: var(--color-text-light);
  }

  .contact-link {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .contact-link:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
  }

  .contact-detail {
    color: var(--color-text);
  }
  
  .contact-address {
    margin-bottom: var(--space-4);
  }
  
  .contact-address h4 {
    margin-bottom: var(--space-2);
  }

  /* Custom styles for social icons in contact info */
  :global(.contact-social.social-links) {
    justify-content: flex-start;
    gap: var(--space-4);
  }

  :global(.contact-social .social-icon) {
    padding: var(--space-2);
  }

  @media (width <= 767px) {
    .contact-info-section {
      align-items: center;
      text-align: center;
    }

    .contact-group {
      align-items: center;
    }

    .contact-text,
    .contact-address {
      text-align: center;
    }

    :global(.contact-social.social-links) {
      justify-content: center;
    }
  }

  @media (width >= 768px) {
    .contact-info-section {
      padding: var(--space-8);
    }
  }
</style>
