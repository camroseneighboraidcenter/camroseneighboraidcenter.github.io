---
import BaseLayout from "../components/layout/BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/ui/Hero.astro";
import ContactForm from "../components/ui/ContactForm.astro";
import ContactInfo from "../components/ui/ContactInfo.astro";
import CallToAction from "../components/ui/CallToAction.astro";
---

<BaseLayout
  title="Contact Us"
  description="Get in touch with Camrose Neighbor Aid Center. We're here to help and answer any questions you may have about our programs and services."
>
  <Header slot="header" />

  <main class="contact-content">
    <Hero title="Contact Us" ctaText="View Our Location" ctaLink="#location" />

    <div class="contact-grid">
      <ContactForm />
      <ContactInfo />
    </div>

    <section id="location" class="map-section" aria-labelledby="map-title">
      <h2 id="map-title" class="sr-only">Our Location</h2>
      <iframe
        title="Camrose Neighbor Aid Center Location"
        src="https://maps.google.com/maps?;hl=en&q=4524 54 Street Camrose, AB&t=&z=15&ie=UTF8&iwloc=B&output=embed"
        width="100%"
        height="450"
        style="border: none;"
        allowfullscreen
        loading="lazy"></iframe>
    </section>

    <CallToAction
      title="Ready to Make a Difference?"
      description="Join us in our mission to serve the Camrose community. Your support matters."
      primaryCta={{
        text: "Volunteer Today",
        href: "/volunteer",
      }}
      secondaryCta={{
        text: "Make a Donation",
        href: "/donate",
      }}
    />
  </main>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .contact-grid {
    width: 100%;
    max-width: 1400px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    gap: var(--space-8);
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .map-section {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }
  .social-links-contact {
    justify-content: start;
  }

  @media (max-width: 768px) {
    .contact-content {
      gap: var(--space-6);
    }
    .contact-grid {
      flex-direction: column;
      gap: var(--space-6);
    }
  }
</style>
