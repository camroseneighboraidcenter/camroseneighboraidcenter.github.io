---
import BaseLayout from "../components/layout/BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/ui/Hero.astro";
import ContactForm from "../components/ui/ContactForm.astro";
import ContactInfo from "../components/ui/ContactInfo.astro";
import CallToAction from "../components/ui/CallToAction.astro";
---

<BaseLayout
  title="Contact Us"
  description="Get in touch with Camrose Neighbor Aid Center. We're here to help and answer any questions you may have about our programs and services."
>
  <Header slot="header" />

  <div class="contact-content">
    <Hero title="Contact Us" ctaText="View Our Location" ctaLink="#location" />

    <div class="contact-grid">
      <ContactForm />
      <ContactInfo />
    </div>

    <section id="location" class="map-section" aria-labelledby="map-title">
      <h2 id="map-title" class="sr-only">Our Location</h2>
      <div class="map-container">
        <iframe
          title="Map showing Camrose Neighbor Aid Center at 4524 54 Street, Camrose, AB"
          src="https://maps.google.com/maps?;hl=en&q=4524 54 Street Camrose, AB&t=&z=15&ie=UTF8&iwloc=B&output=embed"
          allowfullscreen
          loading="lazy"
          aria-hidden="true"
        ></iframe>
      </div>
    </section>

    <CallToAction
      title="Ready to Make a Difference?"
      description="Join us in our mission to serve the Camrose community. Your support matters."
      primaryCta={{
        text: "Volunteer Today",
        href: "/contact#contact-form?subject=volunteer",
        srText: "Learn about volunteering opportunities at Camrose Neighbor Aid Center"
      }}
      secondaryCta={{
        text: "Make a Donation",
        href: "/donate",
        srText: "Support our mission by making a donation"
      }}
    />
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .contact-grid {
    width: 100%;
    max-width: 1400px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    gap: var(--space-4);
    margin: 0 auto;
    padding: 0 var(--space-2);
  }

  .map-section {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .map-container {
    position: relative;
    width: 100%;
    height: 450px;
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .map-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
  .social-links-contact {
    justify-content: start;
  }

  @media (max-width: 768px) {
    .contact-content {
      gap: var(--space-6);
    }
    .contact-grid {
      flex-direction: column;
      gap: var(--space-6);
    }
  }
</style>
