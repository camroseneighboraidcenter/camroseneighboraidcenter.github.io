---
import BaseLayout from "../components/layout/BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/ui/Hero.astro";
import MissionCard from "../components/ui/MissionCard.astro";
import BioCard from "../components/ui/BioCard.astro";
import ProgramGrid from "../components/ui/ProgramGrid.astro";
import CallToAction from "../components/ui/CallToAction.astro";
import { programs } from "../data/programs";
---

<BaseLayout
  title="Home"
  description="Camrose Neighbor Aid Center - Hands linked in Christ's name to meet the needs of others. We provide essential support services to those in need within our community."
>
  <Header slot="header" />

  <div class="home-content">
    <Hero
      title="Welcome to Camrose Neighbor Aid Center"
      ctaText="Contact Us"
      ctaLink="/contact"
    />

    <section class="mission-section">
      <BioCard
        title="Who We Are"
        description="Camrose Neighbor Aid Center is a nonprofit Christian organization dedicated to providing essential services to individuals and families in need within our community."
        motto="WE CARE - WE LISTEN - WE RESPOND"
      />
      <MissionCard
        mission="Hands linked in Christ's name to meet the needs of others."
        className="mission-section"
      />
    </section>

    <ProgramGrid
      title="Featured Programs"
      subtitle="Supporting our community through various initiatives"
      programs={programs}
      variant="featured"
      showFeaturedOnly={true}
    />

    <CallToAction
      title="Make a Difference"
      description="Join us in building a stronger, more caring community. Your support can help transform lives."
      primaryCta={{
        text: "Get Involved",
        href: "/contact#contact-form?subject=volunteer",
        srText: "Contact us about volunteering opportunities"
      }}
      secondaryCta={{
        text: "Learn More",
        href: "/about",
        srText: "Learn more about Camrose Neighbor Aid Center"
      }}
    />
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .home-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .mission-section {
    padding: 0 var(--space-4);
    max-width: var(--max-width-7xl);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  @media (max-width: 768px) {
    .home-content {
      gap: var(--space-12);
    }

    .mission-section {
      padding: 0 var(--space-4);
    }
  }
</style>
