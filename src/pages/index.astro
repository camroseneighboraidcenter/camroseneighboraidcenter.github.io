---
import BaseLayout from "../components/layout/BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/ui/Hero.astro";
import ContentBlock from "../components/ui/ContentBlock.astro";
import CardGrid from "../components/ui/CardGrid.astro";
import Card from "../components/ui/Card.astro";
import CallToAction from "../components/ui/CallToAction.astro";
import { programs } from "../data/programs";
import heroImage from "../assets/hero/hero-helping-hands.webp";
---

<BaseLayout
  title="Home"
  description="Camrose Neighbor Aid Center - Hands linked in Christ's name to meet the needs of others. We provide essential support services to those in need within our community."
>
  <Header slot="header" />

  <div class="home-content">
    <Hero
      title="Welcome to Camrose Neighbor Aid Center"
      backgroundImage={heroImage}
      ctaText="Contact Us"
      ctaLink="/contact"
    />

    <section class="mission-section">
      <ContentBlock
        title="Who We Are"
        content="Camrose Neighbor Aid Center is a nonprofit Christian organization dedicated to providing essential services to individuals and families in need within our community."
        variant="highlight"
      >
        <p class="motto-intro">We serve with an attitude of:</p>
        <p class="motto">WE CARE - WE LISTEN - WE RESPOND</p>
      </ContentBlock>
      <ContentBlock
        title="Our Mission"
        content="Hands linked in Christ's name to meet the needs of others."
        variant="card"
      />
    </section>

    <CardGrid
      title="Featured Programs"
      subtitle="Supporting our community through various initiatives"
      variant="featured"
    >
      {programs.filter(p => p.featured).map((program) => (
        <li>
          <Card
            title={program.title}
            description={program.description}
            image={program.image}
            imageAlt={program.imageAlt}
            imageTitle={program.imageTitle}
            href={`/programs/${program.slug}`}
          />
        </li>
      ))}
    </CardGrid>

    <CallToAction
      title="Make a Difference"
      description="Join us in building a stronger, more caring community. Your support can help transform lives."
      primaryCta={{
        text: "Donate Today",
        href: "/donate",
        srText: "Learn more about donating opportunities"
      }}
      secondaryCta={{
        text: "Get Involved",
        href: "/contact#contact-form?subject=volunteer",
        srText: "Contact us about volunteering opportunities"
      }}
    />
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .home-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .mission-section {
    padding: 0 var(--container-padding);
    max-width: var(--container-max-width);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  .motto-intro {
    font-size: var(--text-lg);
    color: var(--color-text);
    margin-top: var(--space-4);
  }

  .motto {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-primary);
    margin-top: var(--space-2);
  }

  @media (max-width: 768px) {
    .home-content {
      gap: var(--space-6);
    }

    .mission-section {
      padding: 0 var(--container-padding);
    }
  }
</style>
