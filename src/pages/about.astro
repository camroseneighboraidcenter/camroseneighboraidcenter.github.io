---
import { Image } from "astro:assets";
import logo from "../assets/nbaid-logo.webp";
import BaseLayout from "../components/layout/BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/ui/Hero.astro";
import VisionCard from "../components/ui/VisionCard.astro";
import ValuesCard from "../components/ui/ValuesCard.astro";
import CallToAction from "../components/ui/CallToAction.astro";
import BeliefsCard from "../components/ui/BeliefsCard.astro";




---

<BaseLayout title="About Us">
  <Header />

  <div class="about-page">
    <Hero
      title="About Us"
      ctaText="Get Involved"
      ctaLink="/contact#contact-form?subject=volunteer"
    />
    <div class="content-wrapper">
      <section class="intro-section">
        <div class="content-container">
          <p class="lead-text">
            Camrose Neighbor Aid Center began as a collaboration between six
            evangelical churches and has grown into a network supported by 20
            local churches. Our mission is rooted in faith and service, ensuring
            that no one in our community goes without basic needs.
          </p>
        </div>
      </section>

      <VisionCard
        vision="A community where everyone's basic needs are met through Christ-centered service and support."
      />

      <section class="logo-container">
        <h2 class="sr-only">Our Logo</h2>
        <Image
          src={logo}
          alt="Camrose Neighbor Aid Center Logo - Hands linked in Christ's name to meet the needs of others"
          width={1000}
          height={400}
          quality={90}
          class="logo-image"
          loading="lazy"
        />
      </section>

      <BeliefsCard
        beliefs={[
          {
            text: "We believe all things are possible through Christ.",
            verse: "Matthew 19:26",
          },
          {
            text: "We believe that Christians working together glorify God and make a difference.",
            verse: "John 17:21-22",
          },
        ]}
      />

      <ValuesCard
        values={[
          {
            title: "Faith",
            description:
              "Rooted in Christian principles, serving all with compassion and grace.",
          },
          {
            title: "Community",
            description:
              "Building strong relationships and fostering a sense of belonging.",
          },
          {
            title: "Service",
            description: "Dedicated to meeting needs with care and dignity.",
          },
          {
            title: "Collaboration",
            description:
              "Working together with churches and organizations for greater impact.",
          },
          {
            title: "Responsiveness",
            description: "Acting swiftly in times of crisis and need.",
          },
        ]}
      />

      <CallToAction
        title="Join Our Mission"
        description="Together, we can make a difference in our community. Join us as a volunteer or support our mission through donations."
        primaryCta={{
          text: "Volunteer With Us",
          href: "/contact#contact-form?subject=volunteer",
          srText: "Join our team as a volunteer at Camrose Neighbor Aid Center"
        }}
        secondaryCta={{
          text: "Support Our Mission",
          href: "/donate",
          srText: "Make a donation to support our community programs"
        }}
      />
    </div>
  </div>

  <Footer />
</BaseLayout>

<style>
  .about-page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    gap: var(--space-4);
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    padding: var(--space-8) 0;
  }

  .content-container {
    max-width: var(--max-width-7xl);
    margin: var(--space-8) auto;
    padding: 0 var(--space-4);
    width: 100%;
  }

  .intro-section {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  /* Logo section styles */
  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: var(--space-8) auto;
    max-width: min(var(--max-width-4xl), 80vw);
    padding: 0 var(--space-4);
  }

  .logo-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    transition:
      transform var(--transition-normal),
      box-shadow var(--transition-normal);
  }

  /* Enhance logo on hover/focus for interactive feedback */
  .logo-image:hover,
  .logo-image:focus-visible {
    transform: scale(1.05);
    box-shadow: var(--shadow-lg);
  }

  /* Respect user's reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .logo-image {
      transition: none;
    }

    .logo-image:hover,
    .logo-image:focus-visible {
      transform: none;
    }
  }

  .lead-text {
    font-size: var(--text-xl);
    color: var(--color-text-light);
    max-width: 80ch;
    margin: 0 auto;
    line-height: 1.6;
    text-align: justify;
  }

  .section-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-8);
    text-align: center;
  }

  .section-description {
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: var(--space-8);
  }

  @media (max-width: 768px) {
    .content-wrapper {
      gap: var(--space-12);
      padding: var(--space-12) 0;
    }

    .lead-text {
      font-size: var(--text-lg);
    }

    .section-title {
      font-size: var(--text-2xl);
    }
  }
</style>
