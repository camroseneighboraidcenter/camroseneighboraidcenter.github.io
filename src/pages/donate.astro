---
import BaseLayout from "../components/layout/BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/ui/Hero.astro";
import FeatureGrid from "../components/ui/FeatureGrid.astro";
import CallToAction from "../components/ui/CallToAction.astro";
import { contactInfo, charityStatus } from "../data/contact";
import heroImage from "../assets/hero/hero-helping-hands.webp";

const charityNumber = charityStatus.charityNumber;
const craLink = charityStatus.craLink;
const financialStatementsLink = charityStatus.financialStatementsLink;
---

<BaseLayout title="Donate">
  <Header slot="header" />

  <div class="donate-page">
    <Hero
      title="Donate"
      backgroundImage={heroImage}
      ctaText="Learn More"
      ctaLink="#ways-to-donate"
    />
    <div class="content-wrapper">
      <section class="intro-section">
        <div class="content-container flex-col">
          <p class="lead-text">
            Camrose Neighbor Aid Center operates on the generosity of our supporters. Your donation helps us provide essential services to those in need. We are a registered charity and your donation is tax deductible. Our CRA registration number is
            <a href={craLink} target="_blank" rel="noopener noreferrer">
              {charityNumber}
            </a>.
          </p>
          <p class="lead-text">All our annual financial statements are available for review on the <a href={financialStatementsLink} target="_blank" rel="noopener noreferrer">CRA website</a>.</p>
          <p class="donation-methods">
            We accept donations in a few different ways outlined below:
          </p>
        </div>
      </section>
      <section id="ways-to-donate">
        <FeatureGrid
          title="Ways to Donate"
          items={[
            {
              title: "Cash",
              description: "You can donate cash in person at Camrose Neighbor Aid Center.",
            },
            {
              title: "Cheque",
              descriptionHtml: "You can donate by cheque in person or by mail. Payable to: Camrose Neighbor Aid. Mail to: PO Box 1936, Camrose, AB T4V 1X8.",
            },
            {
              title: "Canada Helps",
              descriptionHtml: `You can donate online through <a href="https://www.canadahelps.org/en/dn/24772" target="_blank" rel="noopener noreferrer" class="feature-grid__link">CanadaHelps.org</a>, a secure platform that allows you to contribute using your credit card. Processing fees are subtracted by CanadaHelps from your donation.`,
            },
            {
              title: "E-Transfer",
              descriptionHtml: `You can donate by E-Transfer to <a href="mailto:${contactInfo.donationEmail}" class="feature-grid__link">${contactInfo.donationEmail}</a>. If you would like a receipt mailed to you, please include your full name and address in the memo.`,
            },
          ]}
        />
      </section>
      <CallToAction
        title="Join Our Mission"
        description="Together, we can make a difference in our community. Join us as a volunteer or support our mission through donations."
        primaryCta={{
          text: "Volunteer With Us",
          href: "/contact#contact-form?subject=volunteer",
          srText: "Join our team as a volunteer at Camrose Neighbor Aid Center"
        }}
        secondaryCta={{
          text: "Get in Touch",
          href: "/contact#contact-form?subject=general",
          srText: "Contact Camrose Neighbor Aid Center for more information"
        }}
      />
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .donate-page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    gap: var(--space-4);
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    padding: var(--space-8) 0;
  }

  .content-container {
    max-width: var(--max-width-7xl);
    margin: var(--space-8) auto;
    padding: 0 var(--space-4);
    width: 100%;
  }

  .intro-section {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .lead-text,
  .donation-methods {
    font-size: var(--text-xl);
    color: var(--color-text-light);
    max-width: 80ch;
    margin: var(--space-8) auto;
    line-height: 1.7;
    text-align: justify;
  }

  .lead-text a {
    color: var(--color-link);
    text-decoration: underline;
    font-weight: 600;
  }

  .lead-text a:hover,
  .lead-text a:focus-visible {
    color: var(--color-link-hover);
  }

  .section-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text-heading);
    margin-bottom: var(--space-8);
    text-align: center;
  }

  .section-description {
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: var(--space-8);
  }

  @media (width <= 768px) {
    .content-wrapper {
      gap: var(--space-12);
      padding: var(--space-12) 0;
    }

    .lead-text,
    .donation-methods {
      font-size: var(--text-lg);
    }

    .section-title {
      font-size: var(--text-2xl);
    }
  }
</style>
